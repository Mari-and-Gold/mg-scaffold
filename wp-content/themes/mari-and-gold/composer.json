{
  "type": "wordpress-theme",
  "license": "GPL-2.0",
  "minimum-stability": "stable",
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.8",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcompatibility/php-compatibility": "*",
    "friendsofphp/php-cs-fixer": "^3.49"
  },
  "scripts": {
    "lint-file": "./vendor/bin/phpcs --standard=PSR12",
    "lint": "./vendor/bin/phpcs -s --standard=.phpcs.xml *.php sidebar-templates/ blocks/ loop-templates/ partials/ inc/",
    "report": "./vendor/bin/phpcs -s --report=source --standard=.phpcs.xml *.php sidebar-templates/ blocks/ loop-templates/ partials/ inc/",
    "summary": "./vendor/bin/phpcs -s --report=summary --standard=.phpcs.xml *.php sidebar-templates/ blocks/ loop-templates/ partials/ inc/",
    "fix": "./vendor/bin/phpcbf --standard=.phpcs.xml *.php sidebar-templates/ blocks/ loop-templates/ partials/ inc/"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
